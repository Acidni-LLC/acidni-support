# Environment configuration for acidni-support
# Copy to .env and fill in values

# Azure DevOps
DEVOPS_ORG_URL=https://dev.azure.com/acidni
DEVOPS_PAT=  # Or will be loaded from Key Vault

# Cosmos DB (uses Managed Identity in Azure)
COSMOS_ENDPOINT=https://acidni-cosmos-dev.documents.azure.com:443/
COSMOS_DATABASE=support-dev

# Key Vault (credentials are loaded from here in production)
KEYVAULT_URL=https://kv-terprint-dev.vault.azure.net

# APIM (for notifications)
APIM_BASE_URL=https://apim-terprint-dev.azure-api.net
APIM_SUBSCRIPTION_KEY=

# Notifications
NOTIFICATIONS_ENABLED=false
NOTIFICATIONS_FROM_EMAIL=support@acidni.net

# App Settings
ENVIRONMENT=dev
LOG_LEVEL=INFO
